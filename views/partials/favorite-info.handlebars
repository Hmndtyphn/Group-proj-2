<article class="favorites">
  <div class="title">
    <a href="http://{{fav_url}}" target="_self" referrerpolicy="no-referrer" >{{title}}</a>
    <span>({{format_url fav_url}})</span>
    {{#if favStatus}}
    <div>{{title}} is <span style="color: green;">up</span></div>
    {{else}}
    <div>{{title}} is <span style="color: red;">down</span></div>
    {{/if}}
  </div>
</article>